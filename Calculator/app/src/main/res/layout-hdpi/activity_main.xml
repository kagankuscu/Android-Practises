<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/txtDisplay"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@color/backgroundText"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="70dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnReset"
                android:text="AC"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="+/-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnModule"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnModule"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnDivided"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnOperator"
                android:text="/"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnOperator"
                android:text="X"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnOperator"
                android:text="-"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnOperator"
                android:text="+"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnEmpty"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:onClick="btnWriteNumber"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="btnEquals"
                android:text="="
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>